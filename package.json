  "license": "MIT",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "web": "cd src/3-web/ && yarn start",
    "build": "yarn build:web",
    "build:web": "rm -fr docs && cd src/3-web/ && yarn build && mv build ../../docs",
    "test": "yarn test:domain && yarn test:uc && yarn test:adapters && yarn test:web",
    "test:domain": "cd src/0-domain && yarn test",
    "test:uc": "cd src/1-use-cases && yarn test",
    "test:adapters": "cd src/2-adapters/ && yarn test",
    "test:web": "cd src/3-web/ && yarn test --watchAll=false",
    "cy": "cd src/3-web/ && yarn cypress:run",
    "lint": "eslint src --max-warnings 5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": ["yarn lint --fix"],
    "**/0-domain/*.js": ["yarn test:domain"],
    "**/1-use-cases/*.js": ["yarn test:uc"],
    "**/2-adapters/*.js": ["yarn test:adapters"],
    "**/3-web/*.js": ["yarn test:web"],
    "**/*.feature": ["yarn test:uc"]
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0"
  }
}
